<!DOCTYPE html>
<html>
<head>
  <title>Income Calculator</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="container mt-5">
    <h1>Income Calculator</h1>
    <p>Enter your income from two sources below.</p>

    <form action="/calculate" method="POST">
      <div class="form-group">
        <label for="income1">Income Source 1</label>
        <input type="text" class="form-control" id="income1" name="income1" value="<%= typeof income1 !== 'undefined' ? income1 : '' %>" required>
      </div>
      <div class="form-group">
        <label for="income2">Income Source 2</label>
        <input type="text" class="form-control" id="income2" name="income2" value="<%= typeof income2 !== 'undefined' ? income2 : '' %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Calculate Total</button>
    </form>

    <% if (typeof total !== 'undefined') { %>
      <div class="alert alert-success mt-4">
        <h4>Total Income: <%= total %></h4>
      </div>
    <% } %>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger mt-4">
        <h4>Error: <%= error %></h4>
      </div>
    <% } %>
  </div>
</body>
</html>